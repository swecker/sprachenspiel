			jump: 6
	[player, gnome, pirate]

tileSize = 16
displayHeight = 10

create_world_from_height_map = (heightMap) ->
	prevX = prevY = 0
	world = []
	for col, x in heightMap
		world[x] = []
		for height, y in col
			if Math.round(Math.random()*2) == 1
				type = "grass"
			else
				type = "dirt"
			if height
				world[x][y] =
					type: type
					z: height
					x: x
					y: y
					
passable = (area, character, x, y) ->
	if area[x]?[y]?.z - character.z < character.skills.jump
		true
	else
		#alert "impassable"
		false

drawTiles = (world) ->
	#start = new Date()
	html = []
	i = 0
	for row in world
		html[i] = "<div class=\"row\">"
		i++
		for tile in row
			if tile
				html[i] = "<div class=\"tile #{tile.type}\" style=\"
				 top:#{tile.y*tileSize-tile.z*displayHeight}px;
				 left:#{tile.x*(tileSize*2)}px;
				 z-index:#{tile.y};
				\"></div>"
				i++
		html[i] = "</div>"
		i++
	$('#canvas').html html.join("")
	#end = new Date()
	#alert end - start


